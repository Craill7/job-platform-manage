<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ruoyi.recruit.mapper.ApplicationStatusMapper">

    <!-- 根据 code 查询状态 -->
    <select id="selectByCode" parameterType="String" resultType="com.ruoyi.recruit.domain.ApplicationStatus">
        SELECT
            id,
            code,
            name,
            detail,
            created_at,
            updated_at
        FROM application_statuses
        WHERE code = #{code}
            LIMIT 1
    </select>

</mapper>
