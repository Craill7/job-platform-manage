<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.recruit.mapper.TCitiesMapper">
    
    <resultMap type="TCities" id="TCitiesResult">
        <result property="id"    column="id"    />
        <result property="provinceId"    column="province_id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
    </resultMap>

    <sql id="selectTCitiesVo">
        select id, province_id, code, name from t_cities
    </sql>

    <select id="selectTCitiesList" parameterType="TCities" resultMap="TCitiesResult">
        <include refid="selectTCitiesVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="provinceId != null "> and province_id = #{provinceId}</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
        order by id
    </select>
    
    <select id="selectTCitiesById" parameterType="Long" resultMap="TCitiesResult">
        <include refid="selectTCitiesVo"/>
        where id = #{id}
    </select>

    <select id="selectTCitiesByProvinceId" parameterType="Long" resultMap="TCitiesResult">
        <include refid="selectTCitiesVo"/>
        where province_id = #{provinceId}
        order by id
    </select>

</mapper>

