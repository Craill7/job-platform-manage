<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.recruit.mapper.TJobCategoriesMapper">
    
    <resultMap type="TJobCategories" id="TJobCategoriesResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
    </resultMap>

    <sql id="selectTJobCategoriesVo">
        select id, name from t_job_categories
    </sql>

    <select id="selectTJobCategoriesList" parameterType="TJobCategories" resultMap="TJobCategoriesResult">
        <include refid="selectTJobCategoriesVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectTJobCategoriesById" parameterType="Long" resultMap="TJobCategoriesResult">
        <include refid="selectTJobCategoriesVo"/>
        where id = #{id}
    </select>

    <insert id="insertTJobCategories" parameterType="TJobCategories" useGeneratedKeys="true" keyProperty="id">
        insert into t_job_categories
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
         </trim>
    </insert>

    <update id="updateTJobCategories" parameterType="TJobCategories">
        update t_job_categories
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTJobCategoriesById" parameterType="Long">
        delete from t_job_categories where id = #{id}
    </delete>

    <delete id="deleteTJobCategoriesByIds" parameterType="String">
        delete from t_job_categories where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>